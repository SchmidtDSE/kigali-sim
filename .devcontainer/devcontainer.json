{
  "name": "Kigali Sim Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  "remoteUser": "devuser",
  "updateRemoteUserUID": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-java-pack",
        "ms-vscode.vscode-gradle",
        "ms-vscode.vscode-eslint",
        "ms-vscode.vscode-json",
        "ms-vscode.vscode-npm",
        "ms-vscode.vscode-js-debug"
      ],
      "settings": {
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-21",
            "path": "/opt/java/openjdk"
          }
        ],
        "java.home": "/opt/java/openjdk",
        "gradle.java.home": "/opt/java/openjdk"
      }
    }
  },
  "containerEnv": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
    "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/chromium"
  },
  "forwardPorts": [8000, 8080],
  "postCreateCommand": "cd editor && bash support/install_deps.sh && pnpm install && bash support/update_wasm.sh",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
}