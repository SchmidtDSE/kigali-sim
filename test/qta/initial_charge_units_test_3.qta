// Test case 3: Set manufacture to 100 units, set initial charge BEFORE
// Expected: equipment = 200 units per 100 units + 100 units = 200 units
// Calculation: 100 units + 100 units = 200 units

start default

  define application "App"
  
    uses substance "Sub1"

      # A - Equivalencies
      equals 1 tCO2e / kg
      equals 1 kwh / kg
      
      # B - Set initial charge BEFORE setting manufacture
      initial charge with 1 kg / unit for manufacture
      initial charge with 1 kg / unit for import
      
      # C - Set prior equipment
      set priorEquipment to 1000 units during year 1
      
      # D - Set recharge
      recharge at 1 % annually
      
      # E - Set manufacture in units
      set manufacture to 100 units during year 1
      
      # F - Recharge at end
      recharge during year 1

    end substance
  
  end application

end default


start simulations

  simulate "BAU"
  from years 1 to 3

end simulations