start default
  define application "kgco2e_engine_test"
    uses substance "test_substance_kgco2e"
      enable domestic
      initial charge with 5 kg / unit for domestic
      set domestic to 100 kg during year 1
      equals 1430 kgCO2e / kg
      recharge 10 % with 5 kg / unit
    end substance
  end application
end default

start simulations
  simulate "kgco2e_test" from years 1 to 3
end simulations