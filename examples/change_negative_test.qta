start default

  define application "Test Application"

    uses substance "Test Substance"
      enable domestic
      initial charge with 1 kg / unit for domestic
      set domestic to 5 kg during year 1
      change domestic by -10 kg each year during years 2 to 2
      equals 10 kgCO2e / kg
    end substance

  end application

end default


start simulations

  simulate "Test Negative Change" from years 1 to 3

end simulations
