start default
  define application "tco2e_engine_test"
    uses substance "test_substance_tco2e"
      enable domestic
      initial charge with 5 kg / unit for domestic
      set domestic to 100 kg during year 1
      equals 1.43 tCO2e / kg
      recharge 10 % with 5 kg / unit
    end substance
  end application
end default

start simulations
  simulate "tco2e_test" from years 1 to 3
end simulations